{% extends 'layout/admin_layout.html.twig' %}

{% block title %}Fichier Managers{% endblock %}



{% block main %}
<div class="bg-white p-4 rounded-lg" 
     data-controller="modal" 
     data-modal-url-value="{{ path('admin_modal_manager') }}">
    <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-bold">Liste des Managers</h1>
        <button data-action="click->modal#open" class="bg-pink-600 hover:bg-pink-700 text-white px-4 py-2 rounded">
            Ajouter un employé
        </button>
    </div>

    <div data-modal-target="container"></div>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full border border-gray-200 divide-y divide-gray-200">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Email</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Matricule</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Département</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Créé le</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Actions</th>
                </tr>
            </thead>
            <tbody id="manager-list" class="divide-y divide-gray-200">
                {% for item in employes %}
                    {% include 'admin/employe/_employe_row.html.twig' with { item: item } %}
                {% else %}
                    <tr>
                        <td colspan="5" class="px-6 py-4 text-center text-gray-500">Aucun manager trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}