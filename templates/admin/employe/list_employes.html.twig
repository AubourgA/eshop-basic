{% extends 'layout/admin_layout.html.twig' %}

{% block title %}Fichier Managers{% endblock %}

{% block main %}
<div class="bg-white p-4 rounded-lg">
    <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-bold">Liste des Managers</h1>
    </div>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full border border-gray-200 divide-y divide-gray-200">
            <thead class="bg-gray-100">
                <tr>
                   
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Email</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Matricule</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Département</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Créé le</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                {% for item in employes %}
                    <tr class="hover:bg-gray-50">
                       
                        <td class="px-6 py-4 text-sm text-gray-600">{{ item.email }}</td>
                        <td class="px-6 py-4 text-sm text-gray-600">{{ item.matricule }}</td>
                        <td class="px-6 py-4 text-sm text-gray-600">{{ item.departement }}</td>
                        <td class="px-6 py-4 text-sm text-gray-600">{{ item.createdAt|date('d/m/Y') }}</td>
                        <td class="px-6 py-4 text-sm">
                            {# Placeholder pour les actions éventuelles #}
                            {# <a href="{{ path('app_admin_manager_details', {id: manager.id}) }}" class="text-blue-600 hover:underline">Voir</a> #}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="px-6 py-4 text-center text-gray-500">Aucun manager trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}