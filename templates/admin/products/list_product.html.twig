{% extends 'layout/admin_layout.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block main %}
<div class="bg-white p-4 rounded-lg">
    <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-bold">Liste des Produits</h1>
        <a href="{{ path('app_product_admin_create') }}" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
            Nouveau Produit
        </a>
    </div>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="w-full border-collapse">
            <thead>
                <tr class="bg-gray-100 text-left">
                    <th class="p-4">Image</th>
                    <th class="p-4">Produit</th>
                    <th class="p-4">Créé le</th>
                    <th class="p-4">Stock</th>
                    <th class="p-4">Prix</th>
                    <th class="p-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr class="border-b">
                        <td class="p-4">
                            {% if product.imageFileName %}
                                <img src="{{ asset('uploads/' ~ product.imageFileName) }}" alt="{{ product.designation }}" class="w-16 h-16 rounded">
                            {% else %}
                                <span class="text-gray-500">Aucune image</span>
                            {% endif %}
                        </td>
                        <td class="p-4">
                            <span class="font-semibold">{{ product.designation }}</span>
                            <p class="text-gray-500 text-sm">{{ product.description }}</p>
                        </td>
                        <td class="p-4">{{ product.createdAt|date('d M Y') }}</td>
                        <td class="p-4">
                            {% if product.stock > 10 %}
                                <span class="bg-green-100 text-green-700 px-2 py-1 rounded">En stock</span>
                            {% elseif product.stock > 0 %}
                                <span class="bg-yellow-100 text-yellow-700 px-2 py-1 rounded">Stock faible</span>
                            {% else %}
                                <span class="bg-red-100 text-red-700 px-2 py-1 rounded">Rupture</span>
                            {% endif %}
                        </td>
                        <td class="p-4">{{ product.price|number_format(2, '.', ',') }} €</td>
                        <td class="p-4">
                            {# <a href="{{ path('product_edit', { id: product.id }) }}" class="text-blue-600 hover:underline">Modifier</a>
                            <a href="{{ path('product_delete', { id: product.id }) }}" class="text-red-600 hover:underline ml-2">Supprimer</a> #}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-gray-500 p-4">Aucun produit trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
