{% extends 'layout/admin_layout.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block main %}
<div   data-controller="modal" 
      data-modal-url-value="{{ path('admin_modal_product') }}"
     class="bg-white p-4 rounded-lg">
    <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-bold">Liste des Produits</h1>
        <button data-action="click->modal#open" 
                class="bg-pink-600 hover:bg-pink-700 text-white px-4 py-2 rounded">
                Ajouter un Produit
        </button>
    </div>
    <div data-modal-target="container"></div>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="w-full border-collapse">
            <thead>
                <tr class="bg-gray-100 text-left">
                    <th class="p-4">Image</th>
                    <th class="p-4">Produit</th>
                    <th class="p-4">Créé le</th>
                    <th class="p-4">Stock</th>
                    <th class="p-4">Prix de Vente</th>
                    <th class="p-4">Prix de d'achat</th>
                    <th class="p-4">Marge</th>
                    <th class="p-4">Marketing</th>
                    <th class="p-4">Public</th>
                    <th class="p-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr class="border-b">
                        <td class="p-4">
                            {% if product.imageFileName %}
                                <img src="{{ asset('uploads/' ~ product.imageFileName) }}" alt="{{ product.designation }}" class="w-16 h-16 rounded">
                            {% else %}
                                <span class="text-gray-500">Aucune image</span>
                            {% endif %}
                        </td>
                        <td class="p-4">
                            <span class="font-semibold">{{ product.designation }}</span>
                            <p class="text-gray-500 text-sm">{{ product.description }}</p>
                        </td>
                        <td class="p-4">{{ product.createdAt|date('d M Y') }}</td>
                        <td class="p-4">
                            {% if product.stock > 10 %}
                                <span class="bg-green-100 text-green-700 px-2 py-1 rounded">En stock</span>
                            {% elseif product.stock > 0 %}
                                <span class="bg-yellow-100 text-yellow-700 px-2 py-1 rounded">Stock faible</span>
                            {% else %}
                                <span class="bg-red-100 text-red-700 px-2 py-1 rounded">Rupture</span>
                            {% endif %}
                        </td>
                        <td class="p-4">{{ product.price|number_format(2, '.', ',') }} €</td>
                        <td class="p-4">{{ product.purchasePrice|number_format(2, '.', ',') }} €</td>
                        <td class="p-4">
                            {% if product.margin is not null %}
                                <span class="text-sm font-semibold text-blue-600">{{ product.margin }} %</span>
                            {% else %}
                                <span class="text-gray-400 italic">Indéfini</span>
                            {% endif %}
                        </td>
                        <td class="p-4">{{ product.marketingPosition ? product.marketingPosition.label() : '' }}</td>
                        <td class="p-4"> 
                              {% if product.isActive %}
                                   <span>✔️</span> <!-- Checkmark en vert -->
                                {% else %}
                                   <span>❌</span> <!-- Croix en rouge -->
                                {% endif %}
                        </td>
                        <td class="p-4">
                         
                            <button data-action="click->modal#open"
                                    data-modal-url-value="{{ path('admin_modal_product_edit', {id: product.id}) }}"
                                     class="inline-flex items-center px-4 py-2 bg-yellow-600 hover:bg-yellow-700 text-white text-sm font-medium rounded-lg shadow-sm transition duration-300 ease-in-out">
                                 
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536M9 13l6-6m2-2a2.828 2.828 0 114 4l-10 10H5v-4l10-10z" />
                                </svg>
                            </button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-gray-500 p-4">Aucun produit trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
