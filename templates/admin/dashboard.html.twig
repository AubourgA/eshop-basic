{% extends 'layout/admin_layout.html.twig' %}

{% block title %}Admin Page{% endblock %}

{% block main %}

<div class="bg-pink-50 min-h-screen space-y-6">

    <!-- Cartes statistiques -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 ">
        <div class="bg-white rounded-2xl shadow p-4">
            <p class="text-sm text-gray-500">Total Users</p>
            <h2 class="text-2xl font-bold">{{ customers|length}}</h2>
            {# <p class="text-green-500 text-sm mt-1">+1.01% This week</p> #}
        </div>
        <div class="bg-white rounded-2xl shadow p-4">
            <p class="text-sm text-gray-500">Total Products</p>
            <h2 class="text-2xl font-bold">{{ products|length}}</h2>
            {# <p class="text-green-500 text-sm mt-1">+1.01% This week</p> #}
        </div>
        <div class="bg-white rounded-2xl shadow p-4">
            <p class="text-sm text-gray-500">Total Sales</p>
            <h2 class="text-2xl font-bold">{{ ordersPayed|reduce((total, item) => total + item.totalAmount, 0) }}</h2>
            {# <p class="text-red-500 text-sm mt-1">-0.91% This week</p> #}
        </div>
        <div class="bg-white rounded-2xl shadow p-4">
            <p class="text-sm text-gray-500">Total Refunded</p>
            <h2 class="text-2xl font-bold">$124,854</h2>
            {# <p class="text-green-500 text-sm mt-1">+10.1% This week</p> #}
        </div>
    </div>

    <!-- Section Produits Populaires + Graphiques -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="bg-white rounded-2xl shadow p-4 col-span-2">
            <h3 class="text-lg font-bold mb-4">Orders Analytics</h3>
            <div class="h-60 flex items-center justify-center text-gray-400">
                [Graphique des commandes ici]
            </div>
        </div>
        <div class="bg-white rounded-2xl shadow p-4">
            <h3 class="text-lg font-bold mb-4">Top Products</h3>
            <ul class="space-y-2 text-sm">
              {% for row in bestItemSold %}
                <li class="flex justify-between">
                    <span>{{ row.productName }}</span><span class="font-semibold text-blue-600">{{ row.totalSold }}</span>
                </li>
               {% endfor %}
            </ul>
        </div>
    </div>

    <!-- Earnings + Market Growth -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white rounded-2xl shadow p-4">
            <h3 class="text-lg font-bold mb-4">Earnings</h3>
            <div class="h-60 flex items-center justify-center text-gray-400">
                [Graphique en donut ici]
            </div>
            <p class="text-center mt-4 text-xl font-bold">$452</p>
        </div>
        <div class="bg-white rounded-2xl shadow p-4">
            <h3 class="text-lg font-bold mb-4">Market Growth</h3>
            <div class="h-60 flex items-center justify-center text-gray-400">
                [Graphique en barres ici]
            </div>
        </div>
    </div>

    <!-- Liste des commandes -->
    <div class="bg-white rounded-2xl shadow p-4">
        <h3 class="text-lg font-bold mb-4">Orders List</h3>
        <table class="w-full table-auto text-sm text-left text-gray-700">
            <thead>
                <tr class="bg-gray-100">
                    <th class="p-2">ID</th>
                    <th class="p-2">Date</th>
                    <th class="p-2">Client</th>
                    <th class="p-2">Adresse</th>
                    <th class="p-2">Montant</th>
                    <th class="p-2">Statut</th>
                    <th class="p-2">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for item in ordersLast %}
                <tr class="border-t">
                    <td class="p-2">{{ item.id }}</td>
                    <td class="p-2">{{ item.createdAt|date('d-m-Y à H:m:s') }}</td>
                    <td class="p-2">{{ item.customer.lastname }} {{ item.customer.firstname }}</td>
                    <td class="p-2">{{ item.billingAddress.city }} </td>
                    <td class="p-2">{{ item.totalAmount }} €</td>
                    <td class="p-2 font-semibold {{ item.paymentStatus.value == 'Payé' ? 'text-green-600' : 'text-red-600' }}">
                         {{ item.paymentStatus.value }}
                    </td>
                    <td class="p-2">...</td>
                </tr>
               {% endfor %}
            </tbody>
        </table>
    </div>

</div>
{% endblock %}
