{% extends 'layout/admin_layout.html.twig' %}

{% block title %}D√©tail Stock Produit{% endblock %}

{% block main %}
<div class="bg-white p-6 rounded-xl shadow-md">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Stock du produit : {{ stockProduct.product.designation }}</h2>
        {# a creer unform avec symfony #}
        <form method="get" action="" class="flex gap-2 items-center">
            <label for="product" class="text-sm text-gray-600">Autre produit :</label>
            <select name="id" id="product" class="border-gray-300 rounded-md" onchange="this.form.submit()">
                {# {% for p in products %}
                    <option value="{{ p.id }}" {% if p.id == product.id %}selected{% endif %}>{{ p.name }}</option>
                {% endfor %} #}
            </select>
        </form>
    </div>

    <!-- Bloc √©tat du stock -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-gray-100 p-4 rounded">
            <p class="text-gray-500 text-sm">Quantit√© Physique</p>
            <p class="text-xl font-bold text-gray-800">{{stockProduct.quantity}}</p>
        </div>
        <div class="bg-green-100 p-4 rounded">
            <p class="text-gray-500 text-sm">Quantit√© Dispo √† vendre</p>
            <p class="text-xl font-bold text-green-800">{{ availableQty}}</p>
        </div>
        <div class="bg-yellow-100 p-4 rounded">
            <p class="text-gray-500 text-sm">Quantit√© √† envoyer</p>
            <p class="text-xl font-bold text-yellow-800">{{ reservedQty}}</p>
        </div>
    </div>

     <!-- Bloc seuils -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
       
        <div class="bg-orange-50 p-4 rounded">
            <p class="text-sm text-orange-700">Seuil minimum</p>
            <p class="text-lg font-semibold text-orange-900">{{ stockProduct.threshold}}</p>
        </div>
       
    </div>

    <!-- Infos entrep√¥t -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
                <label class="block text-sm font-medium text-gray-700">Emplacement</label>
                <input type="text" value="" class="mt-1 block w-full bg-gray-100 rounded-md border-gray-300 shadow-sm" readonly>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">Fournisseur</label>
                <input type="text" value="" class="mt-1 block w-full bg-gray-100 rounded-md border-gray-300 shadow-sm" readonly>
            </div>
        </div>


        <div data-controller="toggle-form">
            <!-- Actions -->
            <div class="flex gap-4 mb-6">
                <button data-action="click->toggle-form#toggle" 
                        class="inline-flex items-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded hover:bg-green-700">
                    + Ajouter un Mouvement
                </button>
            </div>

            <!-- Formulaire d'ajout de mouvement -->
            <div data-toggle-form-target="form" 
                class="hidden mt-6 bg-gray-50 p-6 rounded-xl border border-gray-200 shadow-sm">

            <h3 class="text-lg font-semibold text-gray-800 mb-4">Nouveau Mouvement de Stock</h3>

            {{ form_start(form) }}
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-4">

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">{{ form_label(form.type) }}</label>
                    {{ form_widget(form.type, { attr: { class: 'w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500' } }) }}
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">{{ form_label(form.quantity) }}</label>
                    {{ form_widget(form.quantity, { attr: { class: 'w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500' } }) }}
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">{{ form_label(form.comments) }}</label>
                    {{ form_widget(form.comments, { attr: { class: 'w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500', rows: 2 } }) }}
                </div>
            </div>

            <div class="flex justify-end mt-4">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white text-sm px-5 py-2 rounded shadow-md">
                    üíæ Enregistrer le Mouvement
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <!-- Historique -->
    <div>
        <h3 class="text-lg font-semibold mb-2">Historique</h3>
        <div class="overflow-x-auto rounded shadow">
            <table class="min-w-full text-sm divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-2 text-left">Date</th>
                        <th class="px-4 py-2 text-left">Type</th>
                        <th class="px-4 py-2 text-left">Quantit√©</th>
                        <th class="px-4 py-2 text-left">Par</th>
                        <th class="px-4 py-2 text-left">Commentaire</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-100">
                    {% for move in stockMove %}
                        <tr>
                            <td class="px-4 py-2">{{ move.createdAt|date('d/m/Y H:i') }}</td>
                            <td class="px-4 py-2">
                                <span class="px-2 py-1 rounded-full text-xs font-semibold
                                    {% if move.type == 'IN' %}
                                        bg-green-100 text-green-800
                                    {% else %}
                                        bg-red-100 text-red-800
                                    {% endif %}">
                                    {{ move.type|capitalize }}
                                </span>
                            </td>
                            <td class="px-4 py-2">{{ move.quantity }}</td>
                            <td class="px-4 py-2">{{ move.manager.email }}</td>
                            <td class="px-4 py-2 text-gray-500 italic">{{ move.comments }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-gray-500 px-4 py-4">Aucun mouvement enregistr√©</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
