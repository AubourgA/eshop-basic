{% extends 'layout/admin_layout.html.twig' %}

{% block title %}Stock des produits{% endblock %}

{% block main %}
<div class="bg-white p-6 rounded-xl shadow-md">
    <h1 class="text-2xl font-bold text-gray-800 mb-4">Vue globale du stock</h1>

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 text-sm">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Produit</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Quantié Physique</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Qtite Dispo</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Qtite a Envoyé</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Emplacement</th>
                    <th class="px-4 py-2 text-left">Action</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-100">
                {% for stock in stocks %}
                <tr>
                    <td class="px-4 py-2 text-gray-800">{{ stock.product.designation }}</td>
                    <td class="px-4 py-2 text-gray-700 font-semibold">{{ stock.quantity }}</td>
                    <td class="px-4 py-2 text-gray-700"></td>
                    <td class="px-4 py-2 text-gray-700"></td>
                    <td class="px-4 py-2 text-gray-600"></td>
                    <td class="px-4 py-2 text-right">
                        <a href="{{ path('app_admin_stock_detail', { id: stock.product.id }) }}" class="text-indigo-600 hover:underline text-sm font-medium">Voir</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="7" class="text-center text-gray-500 px-4 py-6">Aucun stock trouvé</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}