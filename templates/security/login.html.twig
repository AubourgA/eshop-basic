{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}




{% block body %}
<div class="flex items-center justify-center h-screen bg-gradient-to-br from-purple-800 to-indigo-900">
    <div class="bg-white rounded-2xl shadow-lg w-[400px] overflow-hidden">
        <section class="bg-gradient-to-r from-violet-600 to-indigo-600 py-6 px-4 text-center text-white">
            <h1 class="text-2xl font-bold">Welcome to the website</h1>
            <p class="text-sm">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
        </section>

        <section class="p-6">
            {% if error %}
                <div class="text-red-600 text-sm mb-2">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3 text-center">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="text-indigo-600">Logout</a>
                </div>
            {% endif %}

            <form method="post" class="flex flex-col">
                <div class="mb-4">
                    <label for="inputEmail" class="block text-gray-700">Username</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-2 flex items-center">
                            <svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20"><path d="M10 10a5 5 0 100-10 5 5 0 000 10zM2 18a8 8 0 1116 0H2z" /></svg>
                        </span>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="pl-8 w-full border rounded-lg py-2 px-3 focus:outline-none focus:ring-2 focus:ring-indigo-400" autocomplete="email" required autofocus>
                    </div>
                </div>
                
                <div class="mb-4">
                    <label for="inputPassword" class="block text-gray-700">Password</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-2 flex items-center">
                            <svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20"><path d="M10 2a4 4 0 00-4 4v2H4a1 1 0 000 2h12a1 1 0 000-2h-2V6a4 4 0 00-4-4z" /><path d="M4 10h12v6H4v-6z" /></svg>
                        </span>
                        <input type="password" name="password" id="inputPassword" class="pl-8 w-full border rounded-lg py-2 px-3 focus:outline-none focus:ring-2 focus:ring-indigo-400" autocomplete="current-password" required>
                    </div>
                </div>
                
                <div class="flex items-center justify-between mb-4 text-sm">
                    <label class="flex items-center">
                        <input type="checkbox" class="mr-2"> Keep me logged in
                    </label>
                    <a href="#" class="text-indigo-600">Forgot your password?</a>
                </div>
                
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                
                <button class="w-full bg-violet-600 hover:bg-violet-700 text-white font-bold py-2 px-4 rounded-xl" type="submit">
                    Log In
                </button>
            </form>

        </section>
        <section>
            <div class="bg-gray-100 py-4 px-6 text-center">
                <p class="text-sm">Don't have an account? <a href=" {{ path('app_register')}}" class="text-indigo-600">Sign up</a></p>
            </div>
        </section>
    </div>
</div>
{% endblock %}
