{% extends 'base.html.twig' %}

{% block title %}Création d'un nouveau produit{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-8 rounded-xl shadow-md w-full max-w-lg">
        <h1 class="text-2xl font-bold text-center text-gray-800 mb-4">Créer un Produit</h1>

        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'class': 'space-y-4'}}) }}

        <div class="flex flex-col">
            {{ form_label(form.designation, 'Nom du produit', {'label_attr': {'class': 'font-semibold'}}) }}
            {{ form_widget(form.designation, {'attr': {'class': 'p-2 border rounded-md focus:ring focus:ring-indigo-300'}}) }}
            {{ form_errors(form.designation, {'attr': {'class': 'text-red-500 text-sm'}}) }}
        </div>

        <div class="flex flex-col">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'font-semibold'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'p-2 border rounded-md focus:ring focus:ring-indigo-300'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="flex flex-col">
            {{ form_label(form.price, 'Prix (€)', {'label_attr': {'class': 'font-semibold'}}) }}
            {{ form_widget(form.price, {'attr': {'class': 'p-2 border rounded-md focus:ring focus:ring-indigo-300'}}) }}
            {{ form_errors(form.price) }}
        </div>

        <div class="flex flex-col">
            {{ form_label(form.stock, 'Stock', {'label_attr': {'class': 'font-semibold'}}) }}
            {{ form_widget(form.stock, {'attr': {'class': 'p-2 border rounded-md focus:ring focus:ring-indigo-300'}}) }}
            {{ form_errors(form.stock) }}
        </div>

        <div class="flex flex-col">
            {{ form_label(form.image, 'Image du produit', {'label_attr': {'class': 'font-semibold'}}) }}
            {{ form_widget(form.image, {'attr': {'class': 'p-2 border rounded-md'}}) }}
            {{ form_errors(form.image) }}
        </div>

        <button type="submit" class="w-full bg-indigo-600 text-white p-2 rounded-md hover:bg-indigo-700 transition">
            Ajouter le Produit
        </button>

        {{ form_end(form) }}

        <div class="text-center mt-4">
            <a href="{{ path('app_admin_product') }}" class="text-indigo-600 hover:underline">Retour à la liste</a>
        </div>
    </div>
</div>
{% endblock %}