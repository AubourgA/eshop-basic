

<div {{ attributes }}>
    {{ form_start(form, {
        'attr':  {
            'class': 'flex flex-col p-6',
            'data-action': 'live#action:prevent',
            'data-live-action-param': 'save'
            }
         }) 
    }}

        <!-- Email -->
        <div class="mb-4">
            {{ form_label(form.email, 'Adresse email', {'label_attr': {'class': 'block text-gray-700'}}) }}
            <div class="relative">
                <span class="absolute inset-y-0 left-2 flex items-center">
                    <svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M2 3a2 2 0 012-2h12a2 2 0 012 2v14a2 2 0 01-2 2H4a2 2 0 01-2-2V3z" />
                    </svg>
                </span>
                {{ form_widget(form.email, {'attr': {'class': 'pl-8 w-full border rounded-lg py-2 px-3 focus:outline-none focus:ring-2 focus:ring-indigo-400'}}) }}
            </div>
            <div class="text-red-600 text-sm mt-1">
                {{ form_errors(form.email) }}
            </div>
        </div>

        <!-- Mot de passe -->
        <div class="mb-4">
            <label for="plainPassword" class="block text-gray-700">Mot de passe</label>
            <div class="relative">
                <span class="absolute inset-y-0 left-2 flex items-center">
                    <svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 2a4 4 0 00-4 4v2H4a1 1 0 000 2h12a1 1 0 000-2h-2V6a4 4 0 00-4-4z" />
                        <path d="M4 10h12v6H4v-6z" />
                    </svg>
                </span>
                <input
                    type="password"
                    id="plainPassword"
                    name="plainPassword"
                    data-model="plainPassword"
                    required
                    class="pl-8 w-full border rounded-lg py-2 px-3 focus:outline-none focus:ring-2 focus:ring-indigo-400"
                />
            </div>
        </div>

        <!-- Rôle -->
        <div class="mb-4">
            {{ form_label(form.roles, 'Rôle', {'label_attr': {'class': 'block text-gray-700'}}) }}
            {{ form_widget(form.roles, {'attr': {'class': 'w-full border rounded-lg py-2 px-3 focus:outline-none focus:ring-2 focus:ring-indigo-400'}}) }}
            <div class="text-red-600 text-sm mt-1">
                {{ form_errors(form.roles) }}
            </div>
        </div>


        <!-- Département -->
        <div class="mb-4">
            {{ form_label(form.departement, 'Département', {'label_attr': {'class': 'block text-gray-700'}}) }}
            {{ form_widget(form.departement, {'attr': {'class': 'w-full border rounded-lg py-2 px-3 focus:outline-none focus:ring-2 focus:ring-indigo-400'}}) }}
            <div class="text-red-600 text-sm mt-1">
                {{ form_errors(form.departement) }}
            </div>
        </div>

        <!-- Bouton -->
        <button type="submit"  class="w-full bg-pink-600 hover:bg-pink-700 text-white font-bold py-2 px-4 rounded-xl mt-4">
            save
        </button>

    {{ form_end(form, {'render_rest': false}) }}
</div>