{% extends 'base.html.twig' %}

{% block title %}Home Page{% endblock %}

{% block body %}
  <div class="bg-primary20 min-h-screen">
       
    
        {{ include('partials/_navbar.html.twig') }}

        <!-- Header -->
        <header class="bg-pink-300 text-white text-center py-20 bg-[url('/images/headerPage.png')]">
            <h1 class="text-4xl font-bold text-gray-900">Équipez votre cuisine avec style</h1>
            <p class="mt-4 text-lg">Des ustensiles de qualité pour toutes vos préparations</p>
            <a href="{{ path('app_catalog')}}" class="mt-6 inline-block bg-white text-primary100 px-6 py-3 rounded-full font-semibold shadow-md hover:bg-pink-100">Découvrir la collection</a>
        </header>

        <!-- Main Section -->
        <main class="container mx-auto px-6 py-12">
            <h2 class="text-3xl font-semibold text-primary100 text-center">Nos Nouveautés</h2>
            <div class="grid md:grid-cols-3 gap-8 mt-8">
                <!-- Produit 1 -->
                {% for product in lastProducts %}
                <article class="bg-white p-6 shadow-lg rounded-lg text-center">
                    <img src="{{ asset('uploads/' ~ product.imageFileName) }}" alt="{{ product.imageFilename}}" class="w-full h-48 object-cover rounded-lg">
                    <h3 class="text-xl font-semibold text-pink-800 mt-4">{{ product.designation}}</h3>
                    <p class="text-gray-600 mt-2">{{ product.description}}</p>
                    <button class="mt-4 bg-primary80 text-white px-4 py-2 rounded-full hover:bg-pink-600">Acheter</button>
                </article>
                {% endfor %}
      
            </div>
        </main>

      
        {{ include('partials/_footer.html.twig') }}
    </div>
{% endblock %}
