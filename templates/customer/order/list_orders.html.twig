{% extends 'layout/customer_layout.html.twig' %}

{% block title %}Liste des commandes{% endblock %}

{% block main %}

<div class="container mx-auto px-6 py-4 bg-white">
    <h1 class="text-2xl font-semibold text-gray-900 mb-6">Mes Commandes</h1>

    {% if orders is empty %}
        <p class="text-gray-600">Vous n'avez encore passé aucune commande.</p>
    {% else %}
        <div class="overflow-x-auto bg-white shadow-md rounded-lg">
            <table class="min-w-full border border-gray-200 divide-y divide-gray-200">
                <thead class="bg-gray-100">
                    <tr>
                       
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Date</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Référence</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Montant</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Statut</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Payment</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Mise a Jour</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% for order in orders %}
                        <tr class="hover:bg-gray-50">
                         
                            <td class="px-6 py-4 text-sm text-gray-600">{{ order.createdAt|date('d/m/Y') }}</td>
                            <td class="px-6 py-4 text-sm text-gray-600">{{ order.reference }}</td>
                            <td class="px-6 py-4 text-sm text-gray-600">{{ order.totalAmount|number_format(2, ',', ' ') }} €</td>
                      
                            <td class="px-6 py-4 text-sm">
                                <span class="px-3 py-1 text-xs font-semibold {{ order.status.getBadgeClass() }} rounded-full">
                                    {{ order.status.getLabel() }}
                                </span>
                            </td>
                            {# <td class="px-6 py-4 text-sm text-gray-600">{{ order.paymentStatus }}</td> #}
                            <td class="px-6 py-4 text-sm">
                                <span class="px-3 py-1 text-xs font-semibold {{ order.paymentStatus.getBadgeClass() }} rounded-full">
                                    {{ order.paymentStatus.getLabel() }}
                                </span>
                            </td>
                             <td class="px-6 py-4 text-sm text-gray-600">{{ order.updatedAt|date('d/m/Y') }}</td>
                            <td class="flex gap-2 x-6 py-4 text-sm">
                                {# <a href="{{ path('app_order_show', {id: order.id}) }}" class="text-blue-600 hover:underline">Détails</a> #}
                                <a href="{{ path('app_order_info', {ref: order.reference}) }}" class="text-blue-600 hover:underline">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-eye-icon lucide-eye"><path d="M2.062 12.348a1 1 0 0 1 0-.696 10.75 10.75 0 0 1 19.876 0 1 1 0 0 1 0 .696 10.75 10.75 0 0 1-19.876 0"/><circle cx="12" cy="12" r="3"/>
                                    </svg>
                                </a>
                                 {% if order.paymentStatus.getLabel is same as('En attente')%}
                                  <a href="{{ path('app_order_details', {'id' : order.id })}}">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-credit-card-icon lucide-credit-card"><rect width="20" height="14" x="2" y="5" rx="2"/><line x1="2" x2="22" y1="10" y2="10"/></svg>
                                  </a>
                                  {% endif %}

                                  {% if order.status.getLabel() is same as('Envoyé') %}
                                  <a href="{{ path('app_order_invoice', {id: order.id}) }}" title="Télécharger la facture">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="text-green-800 h-5" width="1em" height="1em" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-width="1.5">
                                        <path d="M20.016 2C18.903 2 18 4.686 18 8h2.016c.972 0 1.457 0 1.758-.335c.3-.336.248-.778.144-1.661C21.64 3.67 20.894 2 20.016 2Z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 8.054v10.592c0 1.511 0 2.267-.462 2.565c-.755.486-1.922-.534-2.509-.904c-.485-.306-.727-.458-.996-.467c-.291-.01-.538.137-1.062.467l-1.911 1.205c-.516.325-.773.488-1.06.488s-.545-.163-1.06-.488l-1.91-1.205c-.486-.306-.728-.458-.997-.467c-.291-.01-.538.137-1.062.467c-.587.37-1.754 1.39-2.51.904C2 20.913 2 20.158 2 18.646V8.054c0-2.854 0-4.28.879-5.167C3.757 2 5.172 2 8 2h12M6 6h8m-6 4H6"/>
                                        <path stroke-linecap="round" d="M12.5 10.875c-.828 0-1.5.588-1.5 1.313c0 .724.672 1.312 1.5 1.312s1.5.588 1.5 1.313c0 .724-.672 1.312-1.5 1.312m0-5.25c.653 0 1.209.365 1.415.875m-1.415-.875V10m0 6.125c-.653 0-1.209-.365-1.415-.875m1.415.875V17"/></g>
                                    </svg>
                                </a>
                                {% endif %}

                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>

{% endblock %}
