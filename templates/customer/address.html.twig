{% extends 'layout/customer_layout.html.twig' %}

{% block title %}my adresses{% endblock %}

{% block main %}
<div class="container mx-auto px-6 py-4">
    <h1 class="text-2xl font-semibold text-gray-900 mb-6">Mes Adresses</h1>
    
    <!-- Boutons pour filtrer Shipping / Billing -->
 
    
    <div class="grid md:grid-cols-3 gap-6" id="addresses-container">
        {% for address in addresses %}
            <div class="bg-white shadow-md rounded-lg p-4 relative border {{ address.isPrimary ? 'border-pink-600' : 'border-gray-300' }}" data-type="{{ address.type }}">
                {% if address.isPrimary %}
                    <span class="  bg-pink-600 text-white text-xs px-2 py-1 rounded">Principale</span>
                {% endif %}

                
                <span class="{{ address.type is same as('facturation') ? 'bg-gray-600' : 'bg-green-600' }}  text-white text-xs px-2 py-1 rounded">{{ address.type is same as('facturation')  ? 'Facturation' : 'Livraison'}}</span>
               

                <div class="flex justify-between items-center">
                    <h2 class="text-lg font-semibold text-gray-900">{{ address.street }}</h2>
                    <div class="space-x-2">
                        <a href="#" class="text-gray-500 hover:text-gray-900"><i class="fas fa-edit"></i></a>
                        <a href="#" class="text-red-500 hover:text-red-700"><i class="fas fa-trash"></i></a>
                    </div>
                </div>
                <p class="text-gray-700">{{ address.city }}, {{ address.postalCode }}</p>
                <p class="text-gray-500 text-sm">{{ address.country }}</p>
             
                <div class="mt-4">
                    <input type="checkbox" id="default-{{ address.id }}" {% if address.isPrimary %}checked{% endif %} class="mr-2">
                    <label for="default-{{ address.id }}" class="text-gray-600 text-sm">Définir comme adresse principale</label>
                </div>
            </div>
        {% else %}
            <p class="text-gray-500 col-span-3">Aucune adresse enregistrée.</p>
        {% endfor %}
    </div>
    
    <!-- Bouton Ajouter une adresse -->
    <div class="text-center mt-6">
        <a href="{{ path('app_address_create')}}" class="px-6 py-3 bg-pink-600 text-white rounded-md hover:bg-pink-700 inline-block">Ajouter une adresse</a>
    </div>
</div>


{% endblock %}

